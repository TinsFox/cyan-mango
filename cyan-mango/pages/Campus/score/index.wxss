.basis{
  flex-basis: 100%;
}
.bg-gradual-d{
  background-image: linear-gradient( 135deg, #C2FFD8 10%, #465EFB 100%);
}
.bg-gradual-c{
  background-image: linear-gradient( 135deg, #79F1A4 10%, #0E5CAD 100%);
}
.page {
  padding: 20rpx 2rpx;
  text-align: center;
  /* background-color: gray; */
}
.dawer {
  background: rgba(255, 255, 255, 0.9);
  height: 100%;
}

.post-icon {
  height: 60rpx;
  width: 60rpx;
  position: fixed;
  bottom: 50rpx;
  right: 30rpx;
  z-index: 1
}
.updateIcon {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 30rpx;
}

/* 大学绩点总览 */

.sum-grade {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* color: white; */
  font-size: 200%;
  font-weight: bold;
  padding: 10rpx 60rpx;
}

.bottom-text {
  font-size: 60%;
  font-weight: normal;
  padding: 10rpx;
}

/* 学期 */

.sem-cell {
  padding: 10rpx;
  border-radius: 20rpx;
  background-color: white;
  margin: 30rpx 20rpx;
}

.sem-grade {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  /* color: #18b3eb; */
  font-size: 150%;
  font-weight: bold;
  padding: 10rpx 60rpx;
}

/* 科目成绩 */

.grade-cell {
  /* border-top: #ddd solid 2rpx; */
  display: flex;
  border-radius: 5px;
  flex-direction: column;
  padding: 10rpx 0rpx;
  height: 150rpx;
  margin-top: 10rpx;
}

.grade-cell .space{
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.grade-cell .son-part {
  flex: 1;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx;
}

/* 控制不同成绩显示的背景颜色 */
/* .grade-cell.level-3{
  background-color: pink;
} */

.son-part.part1 {
  font-size: 105%;
  font-weight: bold;
}


.schedule {
  animation: fadeInDown 0.8s;
}

/* 从上往下淡入 */

@keyframes fadeInDown {
  0% {
    /* transform: translate3d(0, 20%, 0); */
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

.bg {
  width: 100%;
  height: 100%;
  z-index: -1000;
  position: fixed;
  top: 0;
  /* -webkit-filter: blur(8px); */
  /* filter: blur(8px); */
  opacity: 0.9
}

/* 日期栏 */

.date-bar {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  position: fixed;
  z-index: 100;
  background-color: rgba(221, 221, 221, 0.7);
}

.week {
  width: 50rpx;
  font-size: 80%;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  text-align: center;
}

.week-days {
  display: flex;
  flex-direction: column;
  width: 700rpx;
}

.date-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 85%;
  text-align: center;
}

/* 滑动区域 */

.table-body {
  display: flex;
  flex-direction: row;
}

.slide-bar-item {
  display: flex;
  width: 50rpx;
  justify-content: center;
  align-items: center;
  line-height: 126rpx;
  background-color: rgba(221, 221, 221, 0.7);
  color: gray;
}

/* 实践课程 */

.other-title {
  font-size: 95%;
  margin: 0rpx 30rpx 20rpx 30rpx;
  /* margin-top: 50rpx; */
  color: brown;
}

.other-course {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  font-size: 85%;
  padding: 30rpx;
  margin: 20rpx 30rpx;
  border-radius: 10rpx;
  background: rgba(160, 160, 160, 0.8);
  color: white;
}

.tips {
  font-size: 70%;
  color: rgb(182, 181, 181);
  text-align: center;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

/* 课程详情 */

.course {
  height: 150rpx;
  border-radius: 30rpx 30rpx 0rpx 0rpx;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120%;
  font-weight: bold;
  color: rgb(50, 50, 50);
  text-align: center;
}

.detail-item {
  display: flex;
  flex-direction: row;
  padding: 5rpx;
  
}

.detail-item .key {
  flex: 4;
  text-align: center;
  font-size: 105%;
  color: rgb(50, 50, 50);
}

.detail-item .value {
  flex: 5;
  margin-right: 50rpx;
  text-align: right;
}

.operate {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 30rpx 30rpx 30rpx;
}

.operate image {
  width: 60rpx;
  height: 60rpx;
}


.DrawerClose {
  position: absolute;
  width: 40vw;
  height: 100vh;
  right: 0;
  top: -12px;
  color: transparent;
  padding-bottom: 30rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  letter-spacing: 5px;
  font-size: 60rpx;
  opacity: 0;
  pointer-events: none;
  transition: all 0.4s;
  opacity: 1;
  pointer-events: all;
  width: 15vw;
  color: #fff;
}


/* 悬浮图标 */

.float-icon {
  height: 80rpx;
  width: 80rpx;
  border-radius: 50%;
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  z-index: 2;
  /* box-shadow: 0rpx 3rpx 5rpx 5rpx #ddd; */
  /* -webkit-animation: rotate 15s linear 1000ms infinite; */
  /* animation: rotate 15s linear 1000ms infinite; */
}

@-webkit-keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

@keyframes rotate {
  from {
    -webkit-transform: rotate(0deg);
    transform: rotate(0deg);
  }

  to {
    -webkit-transform: rotate(360deg);
    transform: rotate(360deg);
  }
}

.share-icon {
  height: 70rpx;
  width: 70rpx;
  position: fixed;
  bottom: 180rpx;
  right: 50rpx;
  z-index: 2;
}

.hover-icon {
  opacity: 0.5;
}