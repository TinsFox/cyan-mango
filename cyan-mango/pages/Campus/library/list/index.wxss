page {
  background: rgba(240, 240, 240, 0.9);
}

.search-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  min-height: 100rpx;
  background-color: white;
  position: fixed;
  width: 100%;
  z-index: 99;
}

.search-form{
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #F5F5F5;
  line-height: 64rpx;
  border-radius: 50rpx;
  box-sizing: border-box;
  margin: 0 35rpx;
  
}

.search-form text{
  margin-left: 25rpx;
  margin-right: 15rpx;
}
.search-form input{
  flex: 1;
  font-size: 95%;
}

.search-btn{
  display: flex;
  margin-right: 35rpx;
  /* box-sizing: border-box; */
  
}
.search-btn .action{
  font-size: 100%;
  line-height: 64rpx;
  border-radius: 50rpx;
}

button::after {
  border: 0;
}

