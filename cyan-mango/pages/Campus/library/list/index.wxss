} */

.search-btn-hover {
  opacity: 0.8;
}

/* 书本列表 */

.book {
  /* border-bottom: 1rpx solid #ddd; */
  margin: 15rpx;
  padding: 5rpx;
  /* border: 1rpx solid red; */
  border-radius: 20rpx;
  background: white;
  box-shadow: 3rpx 3rpx 5rpx 5rpx #f2f2f2f2;

}

.book-name {
  padding: 10rpx 20rpx;
  color: rgb(75, 15, 15);
}

.book-info {
  display: flex;
  flex-direction: row;
}

.cover {
  flex: 2.5;
  height: 250rpx;
  /* border: 1rpx solid rgb(33, 71, 141); */
  padding: 10rpx;
}

.book-info image {
  width: 100%;
  height: 100%;
  /* border: 1rpx solid red; */
}

.info {
  flex: 5;
  /* border: 1rpx solid rgb(61, 61, 61); */
  padding: 15rpx;
  margin-left: 30rpx;
  position: relative;
}

.info .author {
  font-size: 90%;
  /* color: grey; */
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.info .pub {
  font-size: 90%;
  /* color: grey; */
  width: 450rpx;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}

.call-No {
  /* margin: 15rpx 0; */
  color: rgb(141, 83, 83);
  font-size: 90%;
}

.info .collection {
  position: absolute;
  bottom: 20rpx;
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 85%;
  /* border: 1rpx solid rgb(209, 32, 32); */
}

.collection view {
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  margin: 0rpx 10rpx;
}

.switch-page {
  /* border: 1rpx solid rgb(209, 32, 32); */
  display: flex;
  align-items: center;
  justify-content: space-around;
  padding: 20rpx 100rpx;
  color: grey;
  font-size: 85%;
}

.switch-page image {
  width: 70rpx;
  height: 70rpx;
}

#switch-btn {
  position: fixed;
  bottom: 30rpx;
  right: 15rpx;
  z-index: 99;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

#switch-btn .top,
#switch-btn .bottom {
  flex: 1;
  width: 65%;
  line-height: 65rpx;
  border-radius: 50%;
  border: 0 solid white;
  background-color: #39b54a;
}

#switch-btn .top{
  display: flex;
  justify-content: center;
  align-items: center;
}

#switch-btn .bottom{
  margin-top: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
