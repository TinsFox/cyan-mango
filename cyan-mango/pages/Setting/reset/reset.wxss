.page{
    box-sizing: border-box;
    min-height: 50vh;
    width: 90%;
    background: rgba(0, 0, 0, .6); 
    padding: 0 7.5%;
    /* margin: 0 3%; */
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    border-radius: 15px;
}
.reset-title{
    height: 8vh;
    display: flex;
    align-items: center;
    justify-content: center;
}
.reset-title text{
    text-align: center;
    font-size: 150%;
}
.reset-form{
    width: 100%;
    height: 42vh;

    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
.reset-form .form-data{
    flex: 2;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
.reset-form .form-data .item{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: space-evenly;
}
.reset-form .form-data .item>text{
    flex: 3;
    font-size: 120%;
    display: flex;
    align-items: flex-end;

}
.reset-form .form-data .item>input{
    flex: 2;
    border-bottom: solid 2px #fff;
}
.reset-form .reset-btn{
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.reset-form .reset-btn button{
    height: 6.5vh;
    font-size: 120%;
    background: linear-gradient(90deg, rgba(63,94,251,1) 0%, rgba(173,80,167,1) 61%, rgba(252,70,107,1) 100%);
}