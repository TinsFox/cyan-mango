.userinfo-avatar {
  overflow:hidden;  
  display: block;  
  width: 160rpx;  
  height: 160rpx;  
  margin-top: 50rpx;  
  border-radius: 50%;  
  border: 2px solid #fff;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);  
}
.page-section {
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  padding: 0 50rpx;
  box-sizing: border-box;
}

.page-login-button {
  width: 50%;
}

.page-login-title {
  align-items: center;
  font-size: 28rpx;
  margin: 0 0 0 0;
  text-align: center;
  padding-bottom: 10px;
}


.UCenter-bg {
  /* background-image: url(https://image.weilanwl.com/color2.0/index.jpg); */
  /* background-image: url(http://huadeboy.com/wx/pk/aboutBg.jpg); */
  background-size: cover;
  /* height: 550rpx; */
  display: flex;
  justify-content: center;
  padding-top: 10rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}
.page {
  text-align: center;
}

.exchange {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  padding: 100rpx;
}

.icon {
  width: 130rpx;
  height: 130rpx;
  box-shadow: 0rpx 4rpx 10rpx 5rpx #ddd;
  border-radius: 50%;
}

.login-form {
  margin: 80rpx 120rpx;
  text-align: center;
  font-size: 120%;
}

.form-item {
  display: flex;
  height: 100rpx;
  border: 3rpx solid rgb(206, 206, 206);
  border-radius: 50rpx;
  align-items: center;
  justify-content: center;
  margin: 35rpx 0rpx;
}

.agree{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.login-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #18b3eb;
  margin: 50rpx 0rpx;
  /* height: 100rpx; */
  border-radius: 15rpx;
  box-shadow: 3rpx 15rpx 30rpx 0rpx #a4e4fc;
  color: white;
}

/* button::after {
  border: 0;
} */

.btn-hover {
  background-color: #a4e4fc;
}

/* 绑定成功 */

.bind-success {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.weixin {
  display: flex;
  justify-content: center;
  margin: 40rpx;
}

.guide {
  padding: 20rpx;
  text-align: center;
}

.concat {
  align-items: center;
  /* background: rgba(255, 255, 255, 0); */
}

.concat image {
  width: 80rpx;
  height: 80rpx;
}

.wx-btn {
  height: 90rpx;
  display: flex;
  flex-direction: row;
  line-height: 90rpx;
  border-top: 2rpx solid rgba(7, 17, 27, 0.1);
}

.wx-btn .cbtn, .wx-btn .abtn {
  flex: 1;
  text-align: center;
  border-radius: 0rpx;
  border: 0 solid white;
  font-size: 100%;
}

.wx-btn .cbtn {
  border-right: 2rpx solid rgba(7, 17, 27, 0.1);
}
