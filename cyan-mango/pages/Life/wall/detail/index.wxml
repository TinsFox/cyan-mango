<wxs module="tool">
	var isStar = function(arr, uid) {
		var i = 0
		if (arr == null || arr == undefined) return false
		for (i; i < arr.length; i++) {
			if (arr[i].created_by == uid) return true
		}
		return false
	}
	module.exports = {
		isStar: isStar
	}
</wxs>

